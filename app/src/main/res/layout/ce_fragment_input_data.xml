<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@android:color/white"
                                             tools:context=".CardEnrollment.InputDataFragment" android:id="@+id/frameLayout3">
    <TextView
            android:text="Isi form pembuatan kartu berikut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            android:fontFamily="@font/open_sans" android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"/>
    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="3dp"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
                 android:background="@android:color/transparent" android:id="@+id/frameLayout">
        <ProgressBar
                style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:id="@+id/progressBar"
                android:indeterminate="true"
                android:layout_marginTop="-3dp"
                android:indeterminateTint="@color/kuning"
        />
    </FrameLayout>

    <TextView
            android:text="Nomor Kartu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13" app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/textView19" android:layout_marginTop="24dp"
            android:fontFamily="@font/open_sans" android:textSize="11sp" android:textColor="@color/biru"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:ems="10"
            android:id="@+id/editNomor"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginTop="8dp"
            android:background="@drawable/regular_input_background"
            app:layout_constraintTop_toBottomOf="@+id/textView13" android:text="5962200000000000"
            android:inputType="number" android:textSize="12sp" android:fontFamily="@font/open_sans"
            app:layout_constraintEnd_toStartOf="@+id/guideline4" android:paddingLeft="10dp"/>
    <TextView
            android:text="Nama Dikartu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editNomor"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:fontFamily="@font/open_sans" android:textSize="11sp" android:textColor="@color/biru"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editNama"
            android:background="@drawable/regular_input_background"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView14" android:inputType="textPersonName"
            android:fontFamily="@font/open_sans" android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline4" android:paddingLeft="10dp"/>
    <TextView
            android:text="Date of birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editNama"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:textSize="11sp" android:textColor="@color/biru"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:ems="10"
            android:focusable="true"
            android:inputType="none"
            android:background="@drawable/regular_input_background"
            android:id="@+id/editDate" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView15"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:textSize="12sp" android:fontFamily="@font/open_sans"
            app:layout_constraintEnd_toStartOf="@+id/guideline4" android:paddingLeft="10dp"/>
    <TextView
            android:text="PIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView16" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editDate"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:fontFamily="@font/open_sans" android:textSize="11sp" android:textColor="@color/biru"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:inputType="numberPassword"
            android:ems="10"
            android:background="@drawable/regular_input_background"
            android:id="@+id/editPin" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView16"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:text="888888" android:textSize="12sp" android:fontFamily="@font/open_sans"
            app:layout_constraintEnd_toStartOf="@+id/guideline4" android:paddingLeft="10dp"/>

    <android.support.design.button.MaterialButton
            android:text="LANJUT"
            android:layout_height="wrap_content"
            android:id="@+id/btnSubmitCard" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/editPin"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_width="0dp"
            app:backgroundTint="@color/kuning"
            style="@style/Widget.AppCompat.Button.Colored"
            android:elevation="0dp"
            android:translationZ="0dp"
            android:stateListAnimator="@null" android:fontFamily="@font/open_sans" android:textSize="12sp"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="24dp" android:id="@+id/guideline3"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline4"
            app:layout_constraintGuide_end="24dp"/>
</android.support.constraint.ConstraintLayout>