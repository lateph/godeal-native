<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@android:color/white"
              tools:context=".CardEnrollment.ListCardFragment">


    <android.support.constraint.ConstraintLayout
            android:id="@+id/cardEmptylayout"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="Kartu Anda Kosong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9" android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:textSize="18sp" android:fontFamily="@font/open_sans_semibold"
                android:textColor="@color/hitam33"/>

        <TextView
                android:text="Anda masih belum mempunyai kartu,"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView9" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:fontFamily="@font/open_sans" android:textSize="12sp"
                android:textColor="@color/grey48"/>

        <android.support.design.button.MaterialButton
                android:text="MASUK"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnTambahKartu" android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4"
                app:cornerRadius="8dp"
                app:backgroundTint="@color/kuning"
                style="@style/Widget.AppCompat.Button.Colored"
                android:elevation="0dp"
                android:translationZ="0dp"
                android:stateListAnimator="@null"
                android:layout_marginStart="24dp" android:layout_marginEnd="24dp"/>

        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/statusPair"
                android:visibility="visible"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>


        <Button
                android:text="Pair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pairBtn"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                android:visibility="visible" app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="tambahkan kartu anda sekarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView18"
                app:layout_constraintTop_toBottomOf="@+id/textView10" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:fontFamily="@font/open_sans" android:textSize="12sp"
                android:textColor="@color/grey48"/>
        <ImageView
                android:src="@drawable/empty_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/textView18"/>

    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:id="@+id/layoutListViewCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:text="Pair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pairBtn2"
                android:layout_marginTop="8dp"
                android:visibility="visible" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/statusPair2" android:layout_marginStart="8dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/statusPair2"
                android:visibility="visible"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/textTotalCard"/>
        <TextView
                android:text="asdasdasdasd"
                android:layout_width="wrap_content"
                android:layout_height="0dp" android:id="@+id/textTotalCard"
                android:fontFamily="@font/open_sans_semibold" android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <android.support.v7.widget.RecyclerView
                android:id="@+id/listViewCard"
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@+id/textTotalCard" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp" android:layout_marginBottom="8dp" android:layout_height="0dp"
                android:layout_marginTop="16dp"/>
        <Button
                android:text="Test Pay #0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="7dp"
                android:id="@+id/btnPay" app:layout_constraintStart_toEndOf="@+id/pairBtn2"
                android:layout_marginStart="8dp"/>
    </android.support.constraint.ConstraintLayout>

</LinearLayout>