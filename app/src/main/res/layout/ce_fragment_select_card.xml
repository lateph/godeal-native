<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@android:color/white"
                                             tools:context=".CardEnrollment.SelectCardFragment" android:id="@+id/frameLayout2">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:background="@drawable/regular_input_background"
            android:id="@+id/spinner1"
            android:padding="0dp">
        <Spinner
                android:layout_height="45dp"
                style="@style/Widget.AppCompat.DropDownItem.Spinner"
                android:layout_width="match_parent"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:background="@drawable/regular_input_background"
            android:id="@+id/spinner"
            android:padding="0dp">
        <Spinner
                android:layout_height="45dp"
                style="@style/Widget.AppCompat.DropDownItem.Spinner"
                android:layout_width="match_parent"/>
    </RelativeLayout>

    <TextView
            android:text="Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/textView17" android:layout_marginTop="24dp"
            android:textColor="@color/biru" android:fontFamily="@font/open_sans" android:textSize="12sp"/>
    <TextView
            android:text="Nama Bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner1"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:fontFamily="@font/open_sans" android:textSize="12sp" android:textColor="@color/biru"/>
    <android.support.design.button.MaterialButton
            android:text="LANJUT"
            android:layout_height="wrap_content"
            android:id="@+id/btnSelect" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_width="0dp"
            app:backgroundTint="@color/kuning"
            style="@style/Widget.AppCompat.Button.Colored"
            android:elevation="0dp"
            android:translationZ="0dp"
            android:stateListAnimator="@null" android:fontFamily="@font/open_sans" android:textSize="12sp"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="24dp" android:id="@+id/guideline"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_end="24dp" android:id="@+id/guideline2"/>
    <TextView
            android:text="Isi form pembuatan kartu berikut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:fontFamily="@font/open_sans" android:textSize="12sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"/>


</android.support.constraint.ConstraintLayout>